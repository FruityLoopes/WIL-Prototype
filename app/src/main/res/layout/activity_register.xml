<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/uviwe_register"
    tools:context="uviwe.app.uviweappv1.Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:padding="24dp">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="190dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:text="Register"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="40dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="137dp" />

    <EditText
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_bg"
        android:hint="Name"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="211dp" />

    <EditText
        android:id="@+id/txtEmailRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_bg"
        android:hint="Email"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="282dp" />

    <EditText
        android:id="@+id/txtPasswordRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_bg"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="355dp" />

    <Button
        android:id="@+id/btnSubmitRegister"
        android:layout_width="164dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="Register"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="428dp" />

    <TextView
        android:id="@+id/btnReturnLogin"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:text="Already part of the team? Click here"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="501dp" />


    </LinearLayout>
</LinearLayout>