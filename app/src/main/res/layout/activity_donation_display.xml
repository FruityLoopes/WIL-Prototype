<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/finanace_backround"
    tools:context="uviwe.app.uviweappv1.DonationDisplay">


    <EditText
        android:id="@+id/spinnerDonDis"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="119dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edittext_bg"
        android:hint="End Date (yyyymmdd)"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/edittext_bg"
        android:hint="Start Date (yyymmdd)"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/spinnerDonDis"
        app:layout_constraintEnd_toStartOf="@+id/spinnerDonDis"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="Filter"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/feedDonDisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerDonDis" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/feedDonDisplay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/edittext_bg"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

</androidx.constraintlayout.widget.ConstraintLayout>