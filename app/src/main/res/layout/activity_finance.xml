<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/finanace_backround"
    tools:context="uviwe.app.uviweappv1.finance">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="3dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRecordFinance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textColor="@color/black">

            <TextView
                android:id="@+id/tvPayment"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Record Payment"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"></TextView>

            <Spinner
                android:id="@+id/spinClass"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:textColor="@color/black"
                android:background="@drawable/edittext_bg"/>
            <Spinner
                android:id="@+id/spinChild"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:textColor="@color/black"
                android:background="@drawable/edittext_bg"/>
            <!---->
            <TextView
                android:id="@+id/txtdate"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="19sp"
                android:hint="Date"
                android:background="@drawable/edittext_bg"/>

            <EditText
                android:id="@+id/txtamountpaid"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="number"
                android:hint="Amount paid"
                android:background="@drawable/edittext_bg"/>
            <!---->
            <EditText
                android:id="@+id/txtFirstName"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="First Name"
                android:background="@drawable/edittext_bg"/>

            <EditText
                android:id="@+id/txtLastName"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Last Name"
                android:background="@drawable/edittext_bg"/>

            <EditText
                android:id="@+id/txtContact"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="Contact number"
                android:inputType="phone"
                android:background="@drawable/edittext_bg"/>

            <EditText
                android:id="@+id/txtPayerEmail"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Email address"
                android:inputType="textEmailAddress"
                android:background="@drawable/edittext_bg"/>

            <CheckBox
                android:id="@+id/cbConfirmationFinance"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I confirm that the above information is correct" />


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnRecordFinance"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="26dp"
        android:text="Record"
        android:backgroundTint="@android:color/holo_orange_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />


</androidx.constraintlayout.widget.ConstraintLayout>